    $('.nav a').map( function (i, e) {
        var $e = $(e);
        var pathArr = window.location.pathname.split('/')
        if (pathArr.length === 3) {
            if ($e.attr('href') === window.location.pathname) {
                $e.parent().attr('class', 'active');
            }
        } else {
            var href = '';
            for (var i = 0; i < 3; i++) {
                 href += pathArr[i] + '/';
            }
            if ( $e.attr('href') === href ){
                $e.parent().attr('class', 'active');
            }
        }
    });
