    <script type="text/javascript">
        {{#if message}}
            alert('{{message}}');
        {{/if}}

        $(function () {
           $('#inputPassword').blur(function (e) {
               console.log(pwdVal());
               var $pw = $('.pw');
               console.log(pwdVal());
               if( $(this).val().length < 6 || !pwdVal() ) {
                   $pw.addClass('has-danger').find('span').css('display', 'block');
               } else {
                   $pw.removeClass('has-danger').find('span').css('display','none');
               }
           });

           $('#confirmPassword').blur(function (e) {
               var $cpw = $('.cpw');
               if ( $(this).val() !== $('#inputPassword').val() ) {
                   $cpw.addClass('has-danger').find('span').css('display', 'block');
               } else {
                   $cpw.removeClass('has-danger').find('span').css('display','none');
               }
           });

           $('#upd-form').submit(function (e) {
              e.preventDefault();

              if ( '{{userInfo.member.username}}' !== $('input[name="username"]') ) {
                  alert('Abnormal login attempt detected');
                  window.open("about:blank","_self").close();
              }

              if ( $('.pw').hasClass('has-danger') || $('.cpw').hasClass('has-danger') ) {
                  alert('check your password again');
              } else if ( !$('#inputPassword').val() || !$('#confirmPassword').val() ) {
                  alert('please enter new password');
              } else {
                  this.submit();
              }
           });
        });

        var pwdVal = function () {
            return !!$('#inputPassword').val();
        }
